{
  "name": "di-companion-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Dynamic Innovation Companion - Full-stack application for startup innovation",
  "workspaces": [
    "frontend",
    "strapi"
  ],
  "scripts": {
    "dev": "npm run dev:all",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:strapi\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "cd backend && python main.py",
    "dev:strapi": "npm run develop --workspace=strapi",
    "build": "npm run build:all",
    "build:all": "npm run build:frontend && npm run build:strapi",
    "build:frontend": "npm run build --workspace=frontend",
    "build:strapi": "npm run build --workspace=strapi",
    "test": "npm run test:all",
    "test:all": "npm run test:frontend && npm run test:backend",
    "test:frontend": "npm run test:unit --workspace=frontend",
    "test:backend": "cd backend && python test_chat.py",
    "lint": "npm run lint:all",
    "lint:all": "npm run lint:frontend",
    "lint:frontend": "npm run lint:check --workspace=frontend",
    "format": "npm run format:all",
    "format:all": "npm run prettier:check --workspace=frontend",
    "typecheck": "npm run typecheck:all",
    "typecheck:all": "npm run ts:check --workspace=frontend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "clean": "npm run clean:all",
    "clean:all": "rm -rf node_modules frontend/node_modules strapi/node_modules frontend/dist strapi/build",
    "install:all": "npm install && cd backend && pip install -r requirements.txt"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/simonline/di-companion"
  },
  "keywords": [
    "startup",
    "innovation",
    "entrepreneur",
    "ai-coaching",
    "react",
    "fastapi",
    "strapi"
  ],
  "author": "",
  "license": "MIT"
}